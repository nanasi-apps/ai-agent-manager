{
	"name": "@agent-manager/electron",
	"version": "0.0.0",
	"private": true,
	"main": "dist/main.js",
	"scripts": {
		"dev": "npm run copy:templates && concurrently -k \"tsc -w\" \"wait-on dist/main.js tcp:5173 && ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .\"",
		"prebuild": "rm -rf dist",
		"build": "tsc && npm run copy:templates && npm run copy:web && electron-builder --mac --win --linux",
		"copy:templates": "mkdir -p dist/agents && cp -r src/agents/templates dist/agents/",
		"copy:web": "mkdir -p dist/renderer && cp -r ../web/dist/* dist/renderer/",
		"typecheck": "tsc --noEmit"
	},
	"build": {
		"appId": "xyz.nanasi-apps.agent-manager",
		"productName": "Agent Manager",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"package.json"
		],
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		}
	},
	"dependencies": {
		"@agent-manager/shared": "workspace:*",
		"@google/genai": "^1.34.0",
		"@hono/mcp": "^0.2.3",
		"@hono/node-server": "^1.19.7",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@orpc/server": "^1.13.0",
		"fix-path": "^5.0.0",
		"hono": "^4.11.3",
		"node-pty": "^1.1.0",
		"openai": "^6.15.0",
		"ws": "^8.18.3",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@agent-manager/web": "workspace:*",
		"@types/node": "^25.0.3",
		"@types/ws": "^8.18.1",
		"concurrently": "^9.2.1",
		"electron": "latest",
		"electron-builder": "^26.0.12",
		"typescript": "latest",
		"wait-on": "^9.0.3"
	}
}
